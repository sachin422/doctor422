        <?php if (isset($this->next)): ?>
              <a href="<?= $this->searchUrl($actual_url,array_merge(array('page' => $this->next),$arrayLink)); ?>"><?php echo $this->lang[1]; ?> &raquo;</a> |
        <?php else: ?>
