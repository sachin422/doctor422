        <?php
       $actual_url= $this->url();
    
       $arrayLink=array();
       if(is_array($this->linkArray))
       		$arrayLink=$this->linkArray;
        ?>
        <?php if (isset($this->previous)): ?>
              <a href="<?=$this->searchUrl($actual_url,array_merge(array('page' => $this->first),$arrayLink)) ?>"><?php echo $this->lang[428]; ?></a> |
        <?php else: ?>
                <span class="disabled"><?php echo $this->lang[428]; ?></span> |
        <?php endif; ?>

        <!-- Previous page link -->

        <?php if (isset($this->previous)): ?>
              <a href="<?= $this->searchUrl($actual_url,array_merge(array('page' => $this->previous),$arrayLink)) ; ?>">&laquo; <?php echo $this->lang[0]; ?></a> |
